<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_thiet_bi_phong_hop_form" model="ir.ui.view">
            <field name="name">thiet_bi_phong_hop.form</field>
            <field name="model">thiet_bi_phong_hop</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">Thiết Bị Phòng Họp</div>
                        <group col="4" string="Thông tin thiết bị">
                            <field name="ten_thiet_bi"/>
                            <field name="ma_thiet_bi"/>
                            <field name="trang_thai"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_thiet_bi_phong_hop_tree" model="ir.ui.view">
            <field name="name">thiet_bi_phong_hop.tree</field>
            <field name="model">thiet_bi_phong_hop</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ten_thiet_bi"/>
                    <field name="ma_thiet_bi"/>
                    <field name="trang_thai"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record model="ir.ui.view" id="thiet_bi_phong_hop_search">
            <field name="model">thiet_bi_phong_hop</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ten_thiet_bi"/>
                    <field name="ma_thiet_bi"/>
                    <field name="trang_thai"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_thiet_bi_phong_hop" model="ir.actions.act_window">
            <field name="name">Thiết Bị Phòng Họp</field>
            <field name="res_model">thiet_bi_phong_hop</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="thiet_bi_phong_hop_search"/>
        </record>
    </data>
</odoo>
