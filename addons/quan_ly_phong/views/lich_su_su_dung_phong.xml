<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_lich_su_su_dung_phong_form" model="ir.ui.view">
            <field name="name">lich_su_su_dung_phong.form</field>
            <field name="model">lich_su_su_dung_phong</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">Lịch Sử Sử Dụng Phòng </div>
                        <group col="4" string="Thông tin lịch sử">
                            <field name="chu_de"/>
                            <field name="gio_bat_dau"/>
                            <field name="gio_ket_thuc"/>
                        </group>
                        <group col="4" string="Ghi chú">
                            <field name="ghi_chu"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_lich_su_su_dung_phong_hop_tree" model="ir.ui.view">
            <field name="name">lich_su_su_dung_phong.tree</field>
            <field name="model">lich_su_su_dung_phong</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="chu_de"/>
                    <field name="gio_bat_dau"/>
                    <field name="gio_ket_thuc"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record model="ir.ui.view" id="lich_su_su_dung_phong_search">
            <field name="model">lich_su_su_dung_phong</field>
            <field name="arch" type="xml">
                <search>
                    <field name="chu_de"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_lich_su_su_dung_phong" model="ir.actions.act_window">
            <field name="name">Lịch Sử Sử Dụng Phòng </field>
            <field name="res_model">lich_su_su_dung_phong</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="lich_su_su_dung_phong_search"/>
        </record>
    </data>
</odoo>