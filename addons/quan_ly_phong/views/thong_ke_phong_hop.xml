<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_thong_ke_phong_hop_form" model="ir.ui.view">
            <field name="name">thong_ke_phong_hop.form</field>
            <field name="model">thong_ke_phong_hop</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">Thống Kê Phòng Họp</div>
                        <group col="4" string="Thông tin thống kê">
                            <field name="tong_so_cuoc_hop"/>
                            <field name="phong_id"/>
                            <field name="ty_le_su_dung"/>
                            <field name="so_nguoi_tham_du_tb"/>
                            <field name="so_su_co_thiet_bi"/>
                            <field name="so_cuoc_hop_huy"/>
                            <field name="nguoi_dat_nhieu_nhat"/>
                            <field name="ngay_thong_ke"/>
                            <field name="thoi_luong_tb"/>
                            <field name="du_lieu_bieu_do" widget="binary"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_thong_ke_phong_hop_tree" model="ir.ui.view">
            <field name="name">thong_ke_phong_hop.tree</field>
            <field name="model">thong_ke_phong_hop</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="tong_so_cuoc_hop"/>
                    <field name="phong_id"/>
                    <field name="ty_le_su_dung"/>
                    <field name="so_nguoi_tham_du_tb"/>
                    <field name="so_su_co_thiet_bi"/>
                    <field name="so_cuoc_hop_huy"/>
                    <field name="nguoi_dat_nhieu_nhat"/>
                    <field name="ngay_thong_ke"/>
                    <field name="thoi_luong_tb"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record model="ir.ui.view" id="thong_ke_phong_hop_search">
            <field name="model">thong_ke_phong_hop</field>
            <field name="arch" type="xml">
                <search>
                    <field name="tong_so_cuoc_hop"/>
                    <field name="phong_id"/>
                    <field name="ty_le_su_dung"/>
                    <field name="so_nguoi_tham_du_tb"/>
                    <field name="so_su_co_thiet_bi"/>
                    <field name="so_cuoc_hop_huy"/>
                    <field name="nguoi_dat_nhieu_nhat"/>
                    <field name="ngay_thong_ke"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_thong_ke_phong_hop" model="ir.actions.act_window">
            <field name="name">Thống Kê Phòng Họp</field>
            <field name="res_model">thong_ke_phong_hop</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="thong_ke_phong_hop_search"/>
        </record>
    </data>
</odoo>
